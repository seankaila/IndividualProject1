
@model IEnumerable<HeroApp.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>All Teams in Database.</h1>

<p>
    <a asp-action="AddTeam">Add a New Team</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstablishedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RivalTeam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Logo" style="height:128px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstablishedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RivalTeam)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditTeam", new { id = item.TeamID }) |
                    @Html.ActionLink("Delete", "DeleteTeam", new { id = item.TeamID }) |
                    @Html.ActionLink("View Members", "ViewHeros", new { id = item.TeamID })|
                    @Html.ActionLink("Add Members", "AddHero",  new {TeamID = item.TeamID })
                </td>
            </tr>
        }
    </tbody>
</table>
