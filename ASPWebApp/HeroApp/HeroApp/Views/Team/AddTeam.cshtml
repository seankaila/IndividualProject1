@model HeroApp.Models.Binding.AddTeamBindingModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add a New Team</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTeam">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" maxlength="50" required />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" maxlength="20" required />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RivalTeam" class="control-label"></label>
                <input asp-for="RivalTeam" class="form-control" maxlength="50" required />
                <span asp-validation-for="RivalTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstablishedDate" class="control-label"></label>
                <input type="date" asp-for="EstablishedDate" max="2020-01-1" class="form-control" required />
                <span asp-validation-for="EstablishedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control"/>
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to Teams List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
